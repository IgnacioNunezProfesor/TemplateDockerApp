{
    "version": "0.2.0", //Indica la versión del esquema de configuración de VSCode para depuración.
    "configurations": [ //Lista de configuraciones de depuración disponibles.
        {
            "name": "Listen for Xdebug",    //Nombre visible en VSCode para esta configuración.
            "type": "php",  //Tipo de depuración, en este caso PHP.
            "request": "launch",    //Tipo de solicitud: 'launch' inicia la escucha de Xdebug.
            "port": 9003    // Puerto donde VSCode escucha conexiones Xdebug (por defecto 9003 en Xdebug 3).
        },
        {
            "name": "Launch Edge", //Nombre visible en VSCode para esta configuración.
            "request": "launch", //Tipo de solicitud: 'launch' abre el navegador.
            "type": "msedge", //Tipo de destino: 'msedge' indica que se abrirá Microsoft Edge.
            "url": "http://moodle.asir:8081", //URL que se abrirá en el navegador al iniciar la depuración.
            "webRoot": "${workspaceFolder}/src" //Ruta local del proyecto para mapear archivos con el navegador.
        }
    ]
}
